{
    "name": "mindmapp",
    "version": "0.7.0",
    "description": "Electron application to draw mind maps",
    "homepage": "https://mindmapp.org",
    "author": {
        "name": "Omar Desogus",
        "email": "omardesogus9@gmail.com"
    },
    "keywords": [
        "electron",
        "mmp",
        "mindmap",
        "node",
        "branch",
        "map",
        "mind",
        "infovis"
    ],
    "main": "app.js",
    "private": true,
    "scripts": {
        "start": "ng build --watch",
        "electron": "cp app.js package.json dist && electron ./dist --dev",
        "build": "ng build --prod && cp app.js package.json dist",
        "build:linux": "npm run build && node package.js --asar --platform=linux --arch=all",
        "build:windows": "npm run build && node package.js --asar --platform=win32 --arch=all",
        "build:mac": "npm run build && node package.js --asar --platform=darwin --arch=x64"
    },
    "dependencies": {
        "@angular/animations": "6.0.0",
        "@angular/cdk": "6.0.1",
        "@angular/common": "6.0.0",
        "@angular/compiler": "6.0.0",
        "@angular/core": "6.0.0",
        "@angular/flex-layout": "6.0.0-beta.15",
        "@angular/forms": "6.0.0",
        "@angular/http": "6.0.0",
        "@angular/material": "6.0.1",
        "@angular/platform-browser": "6.0.0",
        "@angular/platform-browser-dynamic": "6.0.0",
        "@ngx-translate/core": "10.0.1",
        "@ngx-translate/http-loader": "3.0.1",
        "core-js": "2.5.3",
        "hammerjs": "2.0.8",
        "material-design-icons": "3.0.1",
        "mmp": "0.2.7",
        "ngx-color-picker": "4.5.3",
        "rxjs": "6.1.0",
        "zone.js": "0.8.26"
    },
    "devDependencies": {
        "@angular/cli": "6.0.0",
        "@angular/compiler-cli": "6.0.0",
        "@angular/language-service": "6.0.0",
        "@angular-devkit/build-angular": "0.6.0",
        "@types/node": "8.5.7",
        "electron": "2.0.0",
        "electron-packager": "12.0.2",
        "electron-reload": "1.2.2",
        "minimist": "1.2.0",
        "ts-node": "3.2.0",
        "typescript": "2.7.2"
    },
    "license": "MIT"
}
